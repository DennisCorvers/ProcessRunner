        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Start" HorizontalAlignment="Left" Margin="38,27,0,0" VerticalAlignment="Top" Width="75" Click="BStart_OnClick"/>
        <Button Content="Restart" HorizontalAlignment="Left" Margin="144,27,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="BRestart_OnClick"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="78.334,27,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="BStop_OnClick"/>

    </Grid>
</Window>
